<% layout('layouts/boilerplate')%>

  <div class="container">
    <nav class="indicadorDePagina px-4 d-flex mt-4" aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/"><span class="mx-1"><img src="/svg/arrowBack.svg" alt="atras"></span>
            Inicio</a></li>
        <li class="breadcrumb-item"><a href="/propiedades"> Propiedades</a></li>
        <li class="breadcrumb-item active" aria-current="page"> <%= propiedad.titulo %> </li>
      </ol>
    </nav>

  </div>


  <section class="container d-none d-lg-block borderDePublicacionDesktop ">

    <div class=" casaIndividualDesktop py-2 pb-3 text-center">
      <div class="row ">
        <div class="col-6">

          <div class="row mx-3">

            <div class="col-12  ">


              <h2 class="tituloDesktop"><%= propiedad.titulo %></h2>


            </div>


            <div class="col-12 ">
              <p class="descripcionDesktop px-3 py-3">
                <%= propiedad.descripcion %>
            </p>
            </div>

            <div class="col-12 py-3 ">
              <a class="direccionPublicacionDesktop" href="#">
                <span class="px-2">
                  <img class="ubiWebIcon" src="/svg/ubi.svg" alt="Icono Ubicacion">
                </span>
                <%= propiedad.direccion %>

              </a>

            </div>
            <div class="row  mt-5 align-items-baseline ">
              <div class="col-6 d-flex px-4 peso">$ -<p class="text-muted ">Consultar</p>
              </div>
              <div class="col-6 ">
                <a class="mx-4 py-2 px-2 d-flex  contactarseDesktop" href="https://wa.me/543329561425">
                  <img class=" px-2 " src="/svg/wpicon.svg" alt="Icono Telefono">
                  Contactarse</a>
              </div>
            </div>
          </div>
        </div>
        <div class="col-6">
          <div class="ventaTag">
            Venta
          </div>
          <!-- Carousel wrapper -->
          <div id="carouselExampleIndicators2" class="carousel slide carousel-fade" data-mdb-ride="carousel">
            <!-- Slides -->
            <div class="carousel-inner mb-5">
              <div class="carousel-item active">
                <img src="" class="d-block w-100" alt="IMAGEN" />
              </div>
              <div class="carousel-item">
                <img src="" class="d-block w-100" alt="IMAGEN" />
              </div>
              <div class="carousel-item">
                <img src="" class="d-block w-100" alt="IMAGEN" />
              </div>
            </div>
            <!-- Slides -->

            <!-- Controls -->
            <button class="carousel-control-prev" type="button" data-mdb-target="#carouselExampleIndicators2"
              data-mdb-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-mdb-target="#carouselExampleIndicators2"
              data-mdb-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
            <!-- Controls -->

            <!-- Thumbnails -->
            <div class="carousel-indicators" style="margin-bottom: -20px;">
              <button type="button" data-mdb-target="#carouselExampleIndicators2" data-mdb-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1" style="width: 100px;">
                <img class="d-block w-100" src="" class="img-fluid" />
              </button>
              <button type="button" data-mdb-target="#carouselExampleIndicators2" data-mdb-slide-to="1"
                aria-label="Slide 2" style="width: 100px;">
                <img class="d-block w-100" src="" class="img-fluid" />
              </button>
              <button type="button" data-mdb-target="#carouselExampleIndicators2" data-mdb-slide-to="2"
                aria-label="Slide 3" style="width: 100px;">
                <img class="d-block w-100" src="" class="img-fluid" />
              </button>
            </div>
            <!-- Thumbnails -->
          </div>
          <!-- Carousel wrapper -->
        </div>

      </div>
    </div>
  </section>







